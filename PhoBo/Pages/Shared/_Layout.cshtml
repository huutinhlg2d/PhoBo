@using Microsoft.AspNetCore.Http
@using PhoBo.Models
@using PhoBo.Auth
@{
    User user = Auth.GetUser(Context);
    var isLogin = Auth.IsLogged(Context);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhoBo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PhoBo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if(isLogin){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Bookings/Index">History</a>
                            </li>
                        }
                        @if(isLogin && user.Role.Equals(UserRole.Photographer)){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Bookings/Config">Config</a>
                            </li>
                        }
                        @if(isLogin && user.Role.Equals(UserRole.Admin)){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Users/Index">User Management</a>
                            </li>
                        }
                    </ul>
                </div>
                <div style="margin: auto; width:200px;">
                    @if (isLogin)
                    {
                        <img src="/@(user?.AvatarUrl ?? "img/avatar/img_avatar.png")" style="object-fit: cover; background-color: pink; width: 50px; height: 50px; border-radius: 50%; display: inline-block;">
                        <a class="nav-link text-dark" style="display: inline-block;" asp-page="/Logout">Logout</a>
                    }
                    else
                    {
                        <div>
                            <a class="nav-link text-dark" style="display: inline-block;" asp-page="/Login">Login</a> |
                            <a class="nav-link text-dark" style="display: inline-block;" asp-page="/Register">Register</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <!-- Page Loader -->
            <div id="loader-wrapper">
                <div id="loader"></div>

                <div class="loader-section section-left"></div>
                <div class="loader-section section-right"></div>
            </div>

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PhoBo - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*    <script src="~/js/site.js" asp-append-version="true"></script>*@
    <script src="~/js/plugins.js"></script>
    <!-- End Page Loader -->
    <script>
        $(window).on("load", function () {
            $('body').addClass('loaded');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
